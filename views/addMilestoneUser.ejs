<%- include('partials/header') %>

<header class="custom-bg-pink py-5 text-center mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold text-dark">Add Milestone</h1>
        <p class="text-muted">Select a milestone and date to add it to your profile.</p>
    </div>
</header>

<main class="container mb-5 flex-grow-1">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <form action="/user/milestones/add" method="POST">
                        
                        <!-- Milestone Dropdown -->
                        <div class="mb-3">
                            <label for="milestoneid" class="form-label fw-bold">Select Milestone</label>
                            <select name="milestoneid" id="milestoneid" class="form-select" required>
                                <option value="">-- Choose a milestone --</option>
                                <% milestones.forEach(m => { %>
                                    <option value="<%= m.milestoneid %>"><%= m.milestonetitle %></option>
                                <% }) %>
                            </select>
                        </div>

                        <!-- Milestone Date -->
                        <div class="mb-3">
                            <label for="milestonedate" class="form-label fw-bold">Date of Completion</label>
                            <input type="date" name="milestonedate" id="milestonedate" class="form-control" required>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom-pink rounded-pill fw-bold">
                                <i class="bi bi-plus-circle me-1"></i> Add Milestone
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>

