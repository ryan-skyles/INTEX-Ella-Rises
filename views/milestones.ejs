<%- include('partials/header') %>

<main class="container mb-5 text-center flex-grow-1">
    <div class="container">
        <br>
        <br>
        <h1 class="display-5 fw-bold text-dark">Milestones</h1>
        <p class="lead text-secondary">Track long-term success indicators.</p>
        <div class="row justify-content-center mb-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow border-0 rounded-4 text-center">
                <div class="card-body py-4" id="milestones-total">
                    <h1 class="display-4 fw-bold text-dark mb-0">
                        <%= totalMilestonesAchieved %>
                    </h1>
                    <h6 class="text-uppercase text-muted fw-bold mb-2">
                        Total Milestones Achieved
                    </h6>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <form action="/milestones" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2 rounded-pill" placeholder="Search milestones..." value="<%= typeof search != 'undefined' ? search : '' %>">
                <button type="submit" class="btn btn-outline-primary rounded-pill">Search</button>
            </form>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                <a href="/milestones/add" class="btn btn-custom-pink rounded-pill px-4 fw-bold">
                    <i class="bi bi-flag-fill me-1"></i> Add Milestone
                </a>
            <% } %>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3">ID</th>
                        <th class="p-3">Milestone Title</th>
                        <th class="p-3 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (milestones.length > 0) { %>
                        <% milestones.forEach(m => { %>
                        <tr>
                            <td class="p-3">#<%= m.milestoneid %></td>
                            <td class="p-3 fw-bold"><%= m.milestonetitle %></td>
                            <td class="p-3 text-end">
                                <a href="/milestones/view/<%= m.milestoneid %>" class="btn btn-sm btn-outline-info me-1" title="View Achievers">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                                    <a href="/milestones/edit/<%= m.milestoneid %>" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/milestones/delete/<%= m.milestoneid %>" method="POST" onsubmit="return confirm('Delete this milestone?');" style="display:inline;">
                                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="3" class="text-center p-4">No milestones found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
</main>

<%- include('partials/footer') %>

<script>
document.addEventListener("DOMContentLoaded", () => {
    
    // Target the card containing the total milestones
    const target = document.querySelector("#milestones-total");

    if (target) {
        const rect = target.getBoundingClientRect();

        // Launch confetti centered over the card
        confetti({
            particleCount: 120,
            spread: 70,
            origin: { 
                x: (rect.left + rect.width / 2) / window.innerWidth,
                y: (rect.top + rect.height / 2) / window.innerHeight
            }
        });
    }
});
</script>
