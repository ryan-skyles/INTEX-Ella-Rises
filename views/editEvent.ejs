<%- include('partials/header') %>

<main class="container my-5" style="max-width: 600px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white border-0 py-4 text-center">
            <h2 class="fw-bold text-dark mb-0">Edit Event</h2>
        </div>
        <div class="card-body p-4">
            
            <form action="/events/edit/<%= event.eventtemplateid %>" method="POST">
                
                <div class="mb-3">
                    <label class="form-label fw-bold small text-muted">Event Name</label>
                    <input type="text" name="eventName" class="form-control rounded-pill" value="<%= event.eventname %>" required>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-muted">Event Type</label>
                        <select name="eventType" class="form-select rounded-pill">
                            <option value="Leadership" <%= event.eventtype === 'Leadership' ? 'selected' : '' %>>Leadership</option>
                            <option value="STEM" <%= event.eventtype === 'STEM' ? 'selected' : '' %>>STEM</option>
                            <option value="Arts" <%= event.eventtype === 'Arts' ? 'selected' : '' %>>Arts</option>
                            <option value="Annual Conference" <%= event.eventtype === 'Annual Conference' ? 'selected' : '' %>>Annual Conference</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-muted">Recurrence</label>
                        <select name="eventRecurrence" class="form-select rounded-pill">
                            <option value="One-Time" <%= event.eventrecurrencepattern === 'One-Time' ? 'selected' : '' %>>One-Time</option>
                            <option value="Weekly" <%= event.eventrecurrencepattern === 'Weekly' ? 'selected' : '' %>>Weekly</option>
                            <option value="Monthly" <%= event.eventrecurrencepattern === 'Monthly' ? 'selected' : '' %>>Monthly</option>
                            <option value="Annual" <%= event.eventrecurrencepattern === 'Annual' ? 'selected' : '' %>>Annual</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold small text-muted">Default Capacity</label>
                    <input type="number" name="eventCapacity" class="form-control rounded-pill" value="<%= event.eventdefaultcapacity %>">
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold small text-muted">Description</label>
                    <textarea name="eventDescription" class="form-control rounded-4" rows="4"><%= event.eventdescription %></textarea>
                </div>

                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-primary rounded-pill fw-bold py-2">Update Event</button>
                    <a href="/events" class="btn btn-outline-secondary rounded-pill fw-bold py-2">Cancel</a>
                </div>

            </form>

            <hr class="text-muted my-3">

            <form action="/events/delete/<%= event.eventtemplateid %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this event?\n\nDeleting this will permanently remove all related records.\n\nThis action cannot be undone. Please proceed only if you are absolutley certain.');">
                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-danger rounded-pill fw-bold py-2">
                        <i class="bi bi-trash me-1"></i> Delete Event
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>

<%- include('partials/footer') %>