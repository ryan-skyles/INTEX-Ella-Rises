<%- include('partials/header') %>

<main class="container my-5" style="max-width: 700px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white border-0 py-4 text-center">
            <h2 class="fw-bold text-dark mb-0">Add New User</h2>
        </div>
        <div class="card-body p-4">
            <form action="/participants/add" method="POST">
                
                <h5 class="fw-bold text-secondary mb-3">Basic Info</h5>
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input type="text" name="firstName" class="form-control rounded-pill" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input type="text" name="lastName" class="form-control rounded-pill" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email (Login ID)</label>
                    <input type="email" name="email" class="form-control rounded-pill" required>
                </div>
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input type="text" name="password" class="form-control rounded-pill" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select rounded-pill">
                            <option value="participant">Participant</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                </div>

                <h5 class="fw-bold text-secondary mt-4 mb-3">Contact Info</h5>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" name="phone" class="form-control rounded-pill">
                </div>
                <div class="row g-3 mb-4">
                    <div class="col-md-5">
                        <label class="form-label">City</label>
                        <input type="text" name="city" class="form-control rounded-pill">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">State</label>
                        <input type="text" name="state" class="form-control rounded-pill">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Zip</label>
                        <input type="text" name="zip" class="form-control rounded-pill">
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-custom-pink rounded-pill fw-bold py-2">Create User</button>
                    <a href="/users" class="btn btn-outline-secondary rounded-pill fw-bold py-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>