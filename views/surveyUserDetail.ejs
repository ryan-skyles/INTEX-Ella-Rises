<%- include('partials/header') %>

<main class="container my-5" style="max-width: 700px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white border-0 py-4 text-center">
            <h2 class="fw-bold text-dark mb-0">Survey Details</h2>
        </div>
        <div class="card-body p-4">
            <p><strong>Event Name:</strong> <%= header.eventname %></p>
            <p><strong>Event Date:</strong> <%= header.eventdate ? new Date(header.eventdate).toLocaleDateString() : 'N/A' %></p>

            <hr class="my-3">

            <% details.forEach(d => { %>
                <div class="mb-3">
                    <p class="fw-bold mb-1"><%= d.question %></p>
                    <p class="text-muted mb-0"><%= d.response %></p>
                </div>
            <% }) %>

            <div class="d-grid mt-4">
                <a href="/surveyUser" class="btn btn-outline-secondary rounded-pill fw-bold py-2">Back to My Surveys</a>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
