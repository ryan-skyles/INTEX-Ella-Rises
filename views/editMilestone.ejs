<%- include('partials/header') %>

<main class="container my-5" style="max-width: 600px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white border-0 py-4 text-center">
            <h2 class="fw-bold text-dark mb-0">Edit Milestone</h2>
        </div>
        <div class="card-body p-4">
            <form action="/milestones/edit/<%= milestone.milestoneid %>" method="POST">
                
                <div class="mb-4">
                    <label class="form-label fw-bold small text-muted">Milestone Title</label>
                    <input type="text" name="title" class="form-control rounded-pill form-control-lg" value="<%= milestone.milestonetitle %>" required>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill fw-bold py-2">Update Milestone</button>
                    <a href="/milestones" class="btn btn-outline-secondary rounded-pill fw-bold py-2">Cancel</a>
                </div>

            </form>
            
            <hr class="my-4">

            <form action="/milestones/delete/<%= milestone.milestoneid %>" method="POST" onsubmit="return confirm('Delete this milestone? This action cannot be undone.');">
                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-danger rounded-pill fw-bold py-2">
                        <i class="bi bi-trash me-1"></i> Delete Milestone
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>

<%- include('partials/footer') %>