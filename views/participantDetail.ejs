<%- include('partials/header') %>

<main class="container my-5" style="max-width: 800px;">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">Participant Details</h2>
        <a href="/participants" class="btn btn-outline-secondary rounded-pill px-4">
            &larr; Back to List
        </a>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-header custom-bg-blue text-white py-4 px-4">
            <h3 class="fw-bold mb-0">
                <i class="bi bi-person-circle me-2"></i>
                <%= participant.participantfirstname %> <%= participant.participantlastname %>
            </h3>
            <span class="badge bg-light text-dark mt-2"><%= participant.participantrole.toUpperCase() %></span>
        </div>

        <div class="card-body p-4">

            <div class="row g-4">

                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase fw-bold small">Contact Information</h6>
                    <hr class="mt-1 mb-3">
                    <p class="mb-2"><strong>Email:</strong> <%= participant.participantemail %></p>
                    <p class="mb-2"><strong>Phone:</strong> <%= participant.participantphone || 'N/A' %></p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase fw-bold small">Location</h6>
                    <hr class="mt-1 mb-3">
                    <p class="mb-2"><strong>City:</strong> <%= participant.participantcity || 'N/A' %></p>
                    <p class="mb-2"><strong>State:</strong> <%= participant.participantstate || 'N/A' %></p>
                    <p class="mb-2"><strong>Zip:</strong> <%= participant.participantzip || 'N/A' %></p>
                </div>

                <div class="col-12 mt-4">
                    <h6 class="text-muted text-uppercase fw-bold small">Additional Info</h6>
                    <hr class="mt-1 mb-3">
                    <p class="mb-2"><strong>Field of Interest:</strong> <%= participant.participantfieldofinterest || 'Not Specified' %></p>
                    <p class="mb-2"><strong>Total Donations:</strong> $<%= participant.totaldonations || '0.00' %></p>
                </div>
                
                <!-- MILESTONES SECTION -->
                <div class="col-12 mt-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-muted text-uppercase fw-bold small">Milestones Achieved</h6>

                        <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                            <button class="btn btn-success btn-sm rounded-pill"
                                data-bs-toggle="modal" data-bs-target="#addMilestoneModal">
                                <i class="bi bi-plus-circle me-1"></i> Add Milestone
                            </button>
                        <% } %>
                    </div>

                    <hr class="mt-1 mb-3">

                    <% if (milestones && milestones.length > 0) { %>
                        <ul class="list-group list-group-flush">

                            <% milestones.forEach(m => { %>
                                <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom">

                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-trophy-fill text-warning me-3 fs-5"></i>
                                        <span class="fw-bold text-dark"><%= m.milestonetitle %></span>
                                    </div>

                                    <div class="d-flex align-items-center gap-2">
                                        <span class="text-muted small">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <%= m.milestonedate ? new Date(m.milestonedate).toLocaleDateString() : 'No Date' %>
                                        </span>

                                        <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>

                                            <!-- EDIT BUTTON -->
                                            <button class="btn btn-sm btn-outline-primary rounded-pill editMilestoneBtn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editMilestoneModal"
                                                data-id="<%= m.participantmilestoneid %>"
                                                data-milestoneid="<%= m.milestoneid %>"
                                                data-date="<%= m.milestonedate ? m.milestonedate.toISOString().split('T')[0] : '' %>">
                                                Edit
                                            </button>

                                            <!-- DELETE -->
                                            <form action="/admin/milestones/delete/<%= m.participantmilestoneid %>?participant=<%= participant.participantid %>"
                                                method="POST" onsubmit="return confirm('Delete this milestone?')">
                                                <button class="btn btn-sm btn-outline-danger rounded-pill">Delete</button>
                                            </form>

                                        <% } %>
                                    </div>
                                </li>
                            <% }) %>

                        </ul>
                    <% } else { %>

                        <div class="alert alert-light text-center text-muted border-0">
                            <i class="bi bi-info-circle me-2"></i> No milestones recorded yet.
                        </div>

                    <% } %>

                </div>

            </div>

            <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                <div class="mt-5 d-flex justify-content-end">
                    <a href="/participants/edit/<%= participant.participantid %>" 
                       class="btn btn-primary rounded-pill px-4 me-2">
                        Edit Info
                    </a>
                </div>
            <% } %>

        </div>
    </div>

    <!-- ADD MILESTONE MODAL -->
    <div class="modal fade" id="addMilestoneModal" tabindex="-1">
        <div class="modal-dialog">
            <form class="modal-content" action="/admin/milestones/add" method="POST">

                <div class="modal-header">
                    <h5 class="modal-title">Add Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="participantid" value="<%= participant.participantid %>">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Milestone Title</label>
                        <select name="milestoneid" class="form-select" required>
                            <% allMilestones.forEach(ms => { %>
                                <option value="<%= ms.milestoneid %>"><%= ms.milestonetitle %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input type="date" name="milestonedate" class="form-control">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success rounded-pill px-4">Add</button>
                </div>

            </form>
        </div>
    </div>

    <!-- DYNAMIC EDIT MODAL -->
    <div class="modal fade" id="editMilestoneModal" tabindex="-1">
        <div class="modal-dialog">
            <form class="modal-content" method="POST" id="editMilestoneForm">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="participantid" value="<%= participant.participantid %>">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Milestone</label>
                        <select name="milestoneid" class="form-select" id="editMilestoneSelect" required>
                            <% allMilestones.forEach(ms => { %>
                                <option value="<%= ms.milestoneid %>"><%= ms.milestonetitle %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Completion Date</label>
                        <input type="date" name="milestonedate" class="form-control" id="editMilestoneDate">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

</main>

<%- include('partials/footer') %>

<script>
    const editModal = document.getElementById('editMilestoneModal');
    const editForm = document.getElementById('editMilestoneForm');
    const editSelect = document.getElementById('editMilestoneSelect');
    const editDate = document.getElementById('editMilestoneDate');

    editModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const milestoneId = button.getAttribute('data-milestoneid');
        const date = button.getAttribute('data-date');

        // Update form action
        editForm.action = `/admin/milestones/edit/${id}`;

        // Update select and date
        editSelect.value = milestoneId;
        editDate.value = date;
    });
</script>
