<%- include('partials/header') %>

<main class="container my-5">

    <div class="row g-4">

        <!-- User Info Card -->
        <div class="col-lg-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header custom-bg-blue text-white py-3 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-person-circle me-2"></i>User Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3 text-center">
                        <h3 class="fw-bold"><%= participant.participantfirstname %> <%= participant.participantlastname %></h3>
                        <span class="badge bg-secondary"><%= participant.participantrole.toUpperCase() %></span>
                    </div>
                    <hr>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Email</label>
                        <input type="text" class="form-control rounded-pill bg-light" value="<%= participant.participantemail %>" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Phone</label>
                        <input type="text" class="form-control rounded-pill" value="<%= participant.participantphone || '' %>" readonly>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <label class="small text-muted fw-bold">City</label>
                            <input type="text" class="form-control rounded-pill" value="<%= participant.participantcity || '' %>" readonly>
                        </div>
                        <div class="col-6">
                            <label class="small text-muted fw-bold">State</label>
                            <input type="text" class="form-control rounded-pill" value="<%= participant.participantstate || '' %>" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Zip</label>
                        <input type="text" class="form-control rounded-pill" value="<%= participant.participantzip || '' %>" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Field of Interest</label>
                        <input type="text" class="form-control rounded-pill" value="<%= participant.participantfieldofinterest || 'Not Specified' %>" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Total Donations</label>
                        <input type="text" class="form-control rounded-pill" value="$<%= participant.totaldonations || '0.00' %>" readonly>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Milestones, Events, Donations -->
        <div class="col-lg-7">
            <!-- Milestones Card -->
            <div class="card shadow border-0 rounded-4 mb-4">
                <div class="card-header bg-white py-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-trophy-fill text-warning me-2"></i>Milestones Achieved <% if (milestones.length > 0) { %>
                    : <%= milestones.length %>
                     <% } %>
                    </h5>
                    
                    <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                        <button class="btn btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#addMilestoneModal">
                            <i class="bi bi-plus-circle me-1"></i> Add Milestone
                        </button>
                    <% } %>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (milestones.length > 0) { %>
                            <% milestones.forEach(m => { %>
                                <li class="list-group-item px-4 py-3 d-flex justify-content-between align-items-center">
                                    <span class="fw-bold"><%= m.milestonetitle %></span>
                                    <span class="badge bg-light text-dark border">
                                        <%= m.milestonedate ? new Date(m.milestonedate).toLocaleDateString() : 'N/A' %>
                                    </span>

                                    <% if (locals.user && (locals.user.role === 'manager' || locals.user.role === 'admin')) { %>
                                        <div class="ms-2 d-flex gap-2">
                                            <button class="btn btn-sm btn-outline-primary rounded-pill editMilestoneBtn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editMilestoneModal"
                                                data-id="<%= m.participantmilestoneid %>"
                                                data-milestoneid="<%= m.milestoneid %>"
                                                data-date="<%= m.milestonedate ? m.milestonedate.toISOString().split('T')[0] : '' %>">
                                                Edit
                                            </button>

                                            <form class="deleteMilestoneForm" data-id="<%= m.participantmilestoneid %>" data-participant="<%= participant.participantid %>">
                                                <button type="button" class="btn btn-sm btn-outline-danger rounded-pill showDeleteConfirm">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item p-4 text-center text-muted">No milestones yet.</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <!-- Upcoming Events Card -->
            <div class="card shadow border-0 rounded-4 mb-4">
                <div class="card-header bg-white py-3 px-4 border-0">
                    <h5 class="fw-bold text-dark mb-0">
                        <i class="bi bi-calendar-check text-primary me-2"></i>Upcoming Events
                    </h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (myRegistrations.length > 0) { %>
                            <% myRegistrations.forEach(r => { %>
                                <li class="list-group-item px-4 py-3 d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold"><%= r.eventname %></span><br>
                                        <span class="text-muted small"><%= new Date(r.eventdatetimestart).toLocaleString() %></span>
                                    </div>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item p-4 text-center text-muted">No event registrations.</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <!-- Donations Card -->
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white py-3 px-4 border-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-heart-fill text-danger me-2"></i>Donation History</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Date</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (myDonations.length > 0) { %>
                                    <% myDonations.forEach(d => { %>
                                        <tr>
                                            <td class="ps-4 text-muted"><%= d.donationdate ? new Date(d.donationdate).toLocaleDateString('en-US', { timeZone: 'UTC' }) : 'N/A' %></td>
                                            <td class="fw-bold text-success">$<%= parseFloat(d.donationamount).toLocaleString('en-US', { minimumFractionDigits: 2 }) %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="2" class="text-center p-4 text-muted">No donations yet.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- ADD MILESTONE MODAL -->
    <div class="modal fade" id="addMilestoneModal" tabindex="-1">
        <div class="modal-dialog">
            <form class="modal-content" action="/admin/milestones/add" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Add Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="participantid" value="<%= participant.participantid %>">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Milestone Title</label>
                        <select name="milestoneid" class="form-select" required>
                            <% allMilestones.forEach(ms => { %>
                                <option value="<%= ms.milestoneid %>"><%= ms.milestonetitle %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input type="date" name="milestonedate" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success rounded-pill px-4">Add</button>
                </div>
            </form>
        </div>
    </div>

    <!-- EDIT MILESTONE MODAL -->
    <div class="modal fade" id="editMilestoneModal" tabindex="-1">
        <div class="modal-dialog">
            <form class="modal-content" method="POST" id="editMilestoneForm">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="participantid" value="<%= participant.participantid %>">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Milestone</label>
                        <select name="milestoneid" class="form-select" id="editMilestoneSelect" required>
                            <% allMilestones.forEach(ms => { %>
                                <option value="<%= ms.milestoneid %>"><%= ms.milestonetitle %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Completion Date</label>
                        <input type="date" name="milestonedate" class="form-control" id="editMilestoneDate">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>

<script>
    // Edit milestone modal population
    const editModal = document.getElementById('editMilestoneModal');
    const editForm = document.getElementById('editMilestoneForm');
    const editSelect = document.getElementById('editMilestoneSelect');
    const editDate = document.getElementById('editMilestoneDate');

    editModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const milestoneId = button.getAttribute('data-milestoneid');
        const date = button.getAttribute('data-date');

        editForm.action = `/admin/milestones/edit/${id}`;
        editSelect.value = milestoneId;
        editDate.value = date;
    });

    // Inline delete confirmation
    document.querySelectorAll('.showDeleteConfirm').forEach(button => {
        button.addEventListener('click', () => {
            const form = button.closest('.deleteMilestoneForm');

            // Prevent multiple popups
            if (form.querySelector('.confirmDeletePopup')) return;

            // Create confirmation popup
            const popup = document.createElement('div');
            popup.classList.add('confirmDeletePopup', 'position-absolute', 'bg-white', 'border', 'rounded', 'shadow', 'p-2', 'd-flex', 'gap-2');
            popup.style.zIndex = 1000;

            popup.innerHTML = `
                <span class="text-danger fw-bold">Confirm?</span>
                <button class="btn btn-sm btn-danger confirmYes">Yes</button>
                <button class="btn btn-sm btn-secondary confirmNo">No</button>
            `;

            // Append to body for absolute positioning
            document.body.appendChild(popup);

            // Position the popup near the button
            const rect = button.getBoundingClientRect();
            popup.style.top = `${rect.bottom + window.scrollY + 4}px`;
            popup.style.left = `${rect.left + window.scrollX}px`;

            // Handle Yes
            popup.querySelector('.confirmYes').addEventListener('click', async () => {
                const id = form.getAttribute('data-id');
                const participant = form.getAttribute('data-participant');

                const response = await fetch(`/admin/milestones/delete/${id}?participant=${participant}`, { method: 'POST' });
                if (response.ok) location.reload();
                else alert('Error deleting milestone.');
            });

            // Handle No
            popup.querySelector('.confirmNo').addEventListener('click', () => popup.remove());

            // Remove popup if user clicks elsewhere
            const removePopup = (e) => {
                if (!popup.contains(e.target) && e.target !== button) {
                    popup.remove();
                    document.removeEventListener('click', removePopup);
                }
            };
            document.addEventListener('click', removePopup);
        });
    });
</script>
