<%- include('partials/header') %>

<header class="custom-bg-pink py-5 text-center mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold text-dark">Events</h1>
        <p class="lead text-secondary">Manage workshops and mentoring sessions.</p>
    </div>
</header>

<main class="container mb-5 flex-grow-1">

    <% if (alertMessage) { %>
        <div class="alert alert-<%= alertType %> alert-dismissible fade show mt-3" role="alert">
            <%= alertMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <form action="/events" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2 rounded-pill" placeholder="Search events..." 
                       value="<%= typeof search != 'undefined' ? search : '' %>">
                <button type="submit" class="btn btn-outline-primary rounded-pill">Search</button>
            </form>
        </div>

        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <% if (user && (user.role === 'manager' || user.role === 'admin')) { %>
                <a href="/events/add" class="btn btn-custom-pink rounded-pill px-4 fw-bold">
                    <i class="bi bi-calendar-plus me-1"></i> Add Event
                </a>
                <a href="/events/addDate" class="btn btn-custom-pink rounded-pill px-4 fw-bold">
                    <i class="bi bi-plus-lg me-1"></i> Schedule Event
                </a>

            <% } %>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3">Event Name</th>
                        <th class="p-3">Type</th>
                        <th class="p-3">Recurrence</th>
                        <th class="p-3">Description</th>
                        <th class="p-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (events.length > 0) { %>
                        <% events.forEach(e => { %>
                            <tr>
                                <td class="p-3 fw-bold"><%= e.eventname %></td>
                                <td class="p-3">
                                    <span class="badge bg-info text-dark"><%= e.eventtype %></span>
                                </td>
                                <td class="p-3"><%= e.eventrecurrencepattern %></td>
                                <td class="p-3 text-muted small">
                                    <%= e.eventdescription ? e.eventdescription.substring(0, 50) + '...' : '' %>
                                </td>

                                <td class="p-3 text-end">

                                    <% if (user) { %>

                                        <% if (user.role === "manager" || user.role === "admin") { %>

                                            <!-- DELETE -->
                                            <form action="/events/delete/<%= e.eventtemplateid %>" 
                                                  method="POST" 
                                                  onsubmit="return confirm('Are you sure you want to delete this event?\n\nDeleting this will permanently remove all related records.\n\nThis action cannot be undone. Please proceed only if you are absolutley certain.');"
                                                  style="display:inline;">
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                            
                                            <!-- EDIT -->
                                            <a href="/events/edit/<%= e.eventtemplateid %>" 
                                               class="btn btn-sm btn-outline-primary ms-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                        <% } else { %>

                                            <!-- UPDATED REGISTER BUTTON -->
                                            <a href="/events/calendar/<%= e.eventtemplateid %>"
                                               class="btn btn-sm btn-success rounded-pill px-3 fw-bold">
                                                View Calendar
                                            </a>

                                        <% } %>

                                    <% } else { %>

                                        <!-- MUST LOGIN -->
                                        <a href="/login"
                                           class="btn btn-sm btn-outline-secondary rounded-pill"
                                           style="font-size: 0.8rem;">
                                            Login to Join
                                        </a>

                                    <% } %>

                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('partials/footer') %>